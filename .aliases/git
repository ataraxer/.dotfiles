# Git aliases
format="%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
alias gitl="git log --pretty=format:'$format' --abbrev-commit --no-merges"
alias gl="git --no-pager log --pretty=format:'$format' --abbrev-commit --no-merges --reverse -20"
alias gita='git add'
alias gital='git add *'
alias gitc='git commit'
alias gits='git status ./'
alias gitd='git diff'
alias gitp='git pull && git push'
